<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text222"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome To WeatherCast!"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/text22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter City name Here:"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:layout_below="@+id/text222"
        />
    <EditText
        android:id="@+id/edittext_cityname"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:hint="city name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@+id/text22"
        />
    <Button
        android:id="@+id/submit_button"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edittext_cityname"
        android:layout_width="100dp"
            android:text="Submit"
        android:textSize="20sp"
        android:layout_height="wrap_content" />
</RelativeLayout>